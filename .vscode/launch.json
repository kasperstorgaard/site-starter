{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "storybook:test",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/playwright",
      "runtimeArgs": [
        "test",
        "${file}"
      ],
      "sourceMaps": true,
      "env": {
        "DEVICE": "android"
      },
      "port": 9229,
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "storybook:debug",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/playwright",
      "runtimeArgs": [
        "test",
        "--headed",
        "${file}"
      ],
      "sourceMaps": true,
      "env": {
        "DEBUG": "pw:input",
        "HEADLESS": "false",
        "DEVICE": "android"
      },
      "port": 9229,
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ]
}
