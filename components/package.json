{
  "name": "components",
  "version": "0.1.0",
  "description": "design system",
  "main": "index.js",
  "scripts": {
    "build": "build-storybook -o dist",
    "lint": "eslint",
    "start": "start-storybook -p 6006",
    "test": "playwright test \\.spec\\.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kasperstorgaard/site-starter.git"
  },
  "keywords": [
    "design",
    "system",
    "atomic",
    "vite",
    "storybook",
    "lit",
    "web",
    "components"
  ],
  "author": "kasperstorgaard",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kasperstorgaard/site-starter/issues"
  },
  "homepage": "https://github.com/kasperstorgaard/site-starter#readme",
  "dependencies": {
    "body-scroll-lock": "^4.0.0-beta.0",
    "lit": "^2.2.1",
    "sass": "^1.49.10",
    "throttle-debounce": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@playwright/test": "^1.20.2",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/html": "^6.4.19",
    "@types/body-scroll-lock": "^3.1.0",
    "babel-loader": "^8.2.4",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "playwright": "^1.20.1",
    "storybook-builder-vite": "^0.1.22",
    "typescript": "^4.6.3",
    "vite": "^2.9.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "import"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "quotes": [
        "warn",
        "single"
      ]
    }
  }
}
