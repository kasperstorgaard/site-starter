{
  "name": "@site-starter/components",
  "version": "0.1.0",
  "type": "module",
  "description": "web components design system with storybook",
  "main": "index.js",
  "scripts": {
    "build": "build-storybook",
    "lint": "eslint",
    "start": "start-storybook -p 6006",
    "test": "ava --serial"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kasperstorgaard/site-starter.git"
  },
  "keywords": [
    "web",
    "componenst",
    "storybook",
    "vite",
    "ava"
  ],
  "author": "kasperstorgaard",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kasperstorgaard/site-starter/issues"
  },
  "homepage": "https://github.com/kasperstorgaard/site-starter#readme",
  "dependencies": {
    "@lit-labs/motion": "^1.0.2",
    "body-scroll-lock": "^4.0.0-beta.0",
    "lit": "^2.1.1",
    "throttle-debounce": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@mdx-js/preact": "^2.0.0",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/html": "^6.4.19",
    "@storybook/testing-library": "0.0.9",
    "@swc-node/register": "^1.4.2",
    "@types/body-scroll-lock": "^3.1.0",
    "ava": "^4.1.0",
    "babel-loader": "^8.2.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-import": "^2.25.4",
    "playwright": "^1.20.0",
    "sass": "^1.49.9",
    "storybook-builder-vite": "^0.1.16",
    "typescript": "^4.6.2",
    "vite": "^2.7.13"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "@swc-node/register"
    ],
    "files": [
      "src/**/*.spec.ts"
    ],
    "ignoredByWatcher": [
      "!**/*.{ts}"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "import",
      "ava"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "quotes": [
        "warn",
        "single"
      ]
    }
  }
}
