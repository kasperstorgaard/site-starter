---
import Header from '../components/header/Header.astro';

import '@components/styles/props.scss';
import '@components/molecules/modal/modal.scss';
import '@components/atoms/button/button.scss';
import '../styles/reset.css';
import '../styles/brand.scss';
import '../styles/fonts.css';

const title = 'Site Starter';
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>
<body>
  <style>
    body, html {
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    main {
      flex-grow: 1;

      display: flex;
      flex-direction: column;
      justify-content: stretch;
      align-items: stretch;

      max-width: 36em;
      width: 100%;
      margin: 0 auto;
      padding: var(--app-box-spacer) var(--app-gutter);
		}
	</style>
  <Header />
  <main>
    <slot />
	</main>
  <sg-modal id="login-modal">
    <p>
      It seems you were either logged out, or you don't have access to view the page you are on.
    </p>
    <a
      href="/"
    >Take me back</a>
    <a
      id="login-modal-continue"
      href="/api/auth/login"
    >Log me in scotty</a>
  </sg-modal>
  <script>
    import '../main.ts';
  </script>
  <script>
    import '@components/molecules/modal/modal.ts';
    import '@components/atoms/overlay/overlay.ts';
  </script>
</body>
</html>
