---
// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'My Astro Site';

---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<link rel="stylesheet" href={Astro.resolve('../styles/reset.scss')} />
	<link rel="stylesheet" href={Astro.resolve('../styles/props.scss')} />
	<link rel="stylesheet" href={Astro.resolve('../styles/brand.scss')} />
	<link rel="stylesheet" href={Astro.resolve('../styles/fonts.css')} />

  <slot name="head" />

	<style>
		header {
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: min(100%, 68ch);
		}
	</style>
</head>
<body>
	<main>
		<header>
			<div>
				<img width="60" height="80" src="/assets/logo.svg" alt="Astro logo">
				<h1>Welcome to <a href="https://astro.build/">Astro</a></h1>
			</div>
		</header>

    <!-- slot: your page content will be injected here. -->
    <slot />
	</main>
</body>
</html>
